        <!-- Navigation Bas Mobile -->
        <nav class="mobile-nav-bottom">
            <button class="nav-item active" onclick="showMobileSection('profil')">
                <i class="fas fa-user-tie"></i>
                <span data-fr="Profil" data-en="Profile">Profil</span>
            </button>
            <button class="nav-item" onclick="showMobileSection('education')">
                <i class="fas fa-university"></i>
                <span data-fr="Éducation" data-en="Education">Éducation</span>
            </button>
            <button class="nav-item" onclick="showMobileSection('competences')">
                <i class="fas fa-cogs"></i>
                <span data-fr="Compétences" data-en="Skills">Compétences</span>
            </button>
            <button class="nav-item" onclick="showMobileSection('experience')">
                <i class="fas fa-briefcase"></i>
                <span data-fr="Expérience" data-en="Experience">Expérience</span>
            </button>
        </nav>
    </div>

    <script>
        // =========================================
        // FONCTIONNALITÉS DESKTOP
        // =========================================

        // Changer d'onglet desktop
        function showPage(pageId) {
            document.querySelectorAll('.page').forEach(page => page.classList.remove('active'));
            document.getElementById(pageId).classList.add('active');

            const navButtons = document.querySelectorAll('.sidebar .nav-btn');
            navButtons.forEach(btn => {
                btn.classList.remove('active');
                if(btn.getAttribute('onclick') && btn.getAttribute('onclick').includes(pageId)) {
                    btn.classList.add('active');
                }
            });
        }

        // Changer la langue desktop
        function setLang(lang) {
            // Mettre à jour les boutons de langue
            document.querySelectorAll('.lang-btn-desktop').forEach(btn => {
                btn.classList.remove('active');
            });
            event.currentTarget.classList.add('active');
            
            // Mettre à jour tous les textes
            document.querySelectorAll(`[data-${lang}]`).forEach(el => {
                const textContent = el.getAttribute(`data-${lang}`);
                el.textContent = textContent;
            });
            
            // Mettre à jour le titre de la page
            document.title = lang === 'fr' ? 'Portfolio - Ravelotiana Antoine Florent' : 'Portfolio - Ravelotiana Antoine Florent';
        }

        // =========================================
        // FONCTIONNALITÉS MOBILES
        // =========================================

        // Langue par défaut : Français
        let currentLang = 'fr';

        // Changer de section sur mobile
        function showMobileSection(sectionId) {
            // Masquer toutes les sections
            document.querySelectorAll('.content-section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Afficher la section sélectionnée
            document.getElementById(`mobile-${sectionId}`).classList.add('active');
            
            // Mettre à jour la navigation bas
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
            });
            
            // Activer l'item de navigation bas
            const activeNavItem = Array.from(document.querySelectorAll('.nav-item')).find(item => 
                item.getAttribute('onclick').includes(sectionId)
            );
            if (activeNavItem) activeNavItem.classList.add('active');
            
            // Scroll vers le haut
            window.scrollTo(0, 0);
        }

        // Changer la langue sur mobile
        function setMobileLang(lang) {
            currentLang = lang;
            
            // Mettre à jour les options de langue
            document.querySelectorAll('.lang-option').forEach(option => {
                option.classList.remove('active');
            });
            event.currentTarget.classList.add('active');
            
            // Mettre à jour tous les textes
            document.querySelectorAll(`[data-${lang}]`).forEach(el => {
                const textContent = el.getAttribute(`data-${lang}`);
                el.textContent = textContent;
            });
            
            // Mettre à jour le titre de la page
            document.title = lang === 'fr' ? 'Portfolio - Ravelotiana Antoine Florent' : 'Portfolio - Ravelotiana Antoine Florent';
            
            // Afficher une notification
            showNotification(lang === 'fr' ? 'Langue changée en Français' : 'Language changed to English');
        }

        // Afficher une notification
        function showNotification(message) {
            const notification = document.createElement('div');
            notification.className = 'notification';
            notification.textContent = message;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        // Initialisation
        document.addEventListener('DOMContentLoaded', function() {
            // Version desktop
            showPage('profil');
            setLang('fr'); // Français activé par défaut
            
            // Version mobile
            showMobileSection('profil');
            // Le français est déjà activé par défaut via la classe active
        });

        // Détection mobile et affichage de la bonne version
        function isMobile() {
            return window.innerWidth <= 768;
        }

        // Au chargement et au redimensionnement
        function handleResponsive() {
            if (isMobile()) {
                document.querySelector('.mobile-container').style.display = 'block';
                document.querySelector('.desktop-container').style.display = 'none';
            } else {
                document.querySelector('.mobile-container').style.display = 'none';
                document.querySelector('.desktop-container').style.display = 'flex';
            }
        }

        // Appliquer au chargement et aux redimensionnements
        window.addEventListener('load', handleResponsive);
        window.addEventListener('resize', handleResponsive);
    </script>
</body>
</html>